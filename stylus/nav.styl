@import "mixins"

.nav:after
.items-minor:after
  display: table
  content: ''
  clear: both

.nav
  padding: 9px 0 10px
  background-color: #f6f6f1
  border-top: 1px solid #eee

.nav .inner
  margin: 0 auto

.nav .items
  float: left

.nav .items li
  font-size: 13px

.items li
  inline-block()
  margin-right: 40px

.items a
  display: block

.nav .items-minor
  float: right
  margin-top: 6px
  line-height: 1

.nav .items-minor li
  display: inline
  font-size: $baseFontSize
  margin-right: 10px
  white-space: nowrap

.items-minor li:first-child:before
  content: ''
  margin: 0

.items-minor li:before
  content: '|'
  color: #adada9
  margin-right: 10px

.items-minor li:last-child
  margin-right: 0

.items-minor a
  display: inline
  line-height: 1
  padding: 0
  border-radius: 0

// for IE 6&7
.nav
.items-minor
  *zoom: 1

.nav .items-minor
  *margin-top: 4px

.items-minor a
  *line-height: 1.2
